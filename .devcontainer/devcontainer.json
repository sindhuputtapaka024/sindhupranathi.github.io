{
  "name": "Python 3 + Streamlit",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bullseye",
  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.md",
        "app.py"
      ]
    },
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },
  "updateContentCommand": "[ -f requirements.txt ] && pip3 install --user -r requirements.txt; echo 'âœ… Packages installed'",
  "postAttachCommand": "streamlit run app.py --server.enableCORS false --server.enableXsrfProtection false",
  "portsAttributes": {
    "8501": {
      "label": "Streamlit App",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [
    8501
  ]
}
